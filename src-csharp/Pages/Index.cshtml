@page
@model IndexModel
@{
    ViewData["Title"] = "My Expenses";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Database Connection Issue:</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">My Expenses</h1>
        <a href="/Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Expense
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="expensesTable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function loadExpenses() {
            try {
                const response = await fetch('/api/expenses');
                const result = await response.json();
                
                const tbody = document.querySelector('#expensesTable tbody');
                tbody.innerHTML = '';
                
                if (result.data && result.data.length > 0) {
                    result.data.forEach(expense => {
                        const row = document.createElement('tr');
                        const date = new Date(expense.expenseDate).toLocaleDateString('en-GB');
                        const statusClass = expense.statusName === 'Approved' ? 'success' : 
                                          expense.statusName === 'Rejected' ? 'danger' :
                                          expense.statusName === 'Submitted' ? 'warning' : 'secondary';
                        
                        row.innerHTML = `
                            <td>${date}</td>
                            <td>${expense.categoryName}</td>
                            <td>${expense.description || '-'}</td>
                            <td>${expense.formattedAmount}</td>
                            <td><span class="badge bg-${statusClass}">${expense.statusName}</span></td>
                            <td>
                                ${expense.statusName === 'Draft' ? 
                                    `<button class="btn btn-sm btn-primary" onclick="submitExpense(${expense.expenseId})">Submit</button>` : 
                                    '-'}
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                } else {
                    tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No expenses found</td></tr>';
                }
            } catch (error) {
                console.error('Error loading expenses:', error);
            }
        }
        
        async function submitExpense(id) {
            try {
                const response = await fetch(`/api/expenses/${id}/submit`, { method: 'POST' });
                const result = await response.json();
                
                if (result.success) {
                    alert('Expense submitted successfully!');
                    loadExpenses();
                } else {
                    alert(result.message || 'Failed to submit expense');
                }
            } catch (error) {
                console.error('Error submitting expense:', error);
                alert('Failed to submit expense');
            }
        }
        
        document.addEventListener('DOMContentLoaded', loadExpenses);
    </script>
}
